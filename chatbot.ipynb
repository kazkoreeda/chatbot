    "import nltk\n",
    "from nltk.chat.util import Chat, reflections\n",
    "\n",
    "# 対話ペアの定義\n",
    "pairs = [\n",
    "    [\n",
    "        r\"こんにちは\",\n",
    "        [\"こんにちは！ご機嫌いかがですか？\",]\n",
    "    ],\n",
    "    [\n",
    "        r\"さようなら\",\n",
    "        [\"さようなら。またお話ししましょう。\",]\n",
    "    ],\n",
    "]\n",
    "\n",
    "# チャットボットの作成\n",
    "chatbot = Chat(pairs, reflections)\n",
    "\n",
    "# チャット開始\n",
    "chatbot.converse()"
   ]
